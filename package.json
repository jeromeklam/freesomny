{
  "name": "api-client",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first, self-hostable API client for teams",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "node apps/server/dist/index.js",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:migrate": "pnpm --filter @api-client/server prisma migrate dev",
    "db:push": "pnpm --filter @api-client/server prisma db push",
    "db:studio": "pnpm --filter @api-client/server prisma studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=22.0.0"
  }
}
