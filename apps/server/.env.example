# ===========================================
# FreeSomnia Server Configuration
# ===========================================
# Copy this file to .env and customize for your environment

# ===========================================
# Database Configuration
# ===========================================
# SQLite (development/single-user mode):
DATABASE_URL="file:./data/api-client.db"

# PostgreSQL (production/team mode):
# DATABASE_URL="postgresql://user:password@localhost:5432/freesomnia"
#
# Note: When switching to PostgreSQL:
# 1. Update the provider in prisma/schema.prisma from "sqlite" to "postgresql"
# 2. Run: pnpm prisma generate
# 3. Run: pnpm prisma migrate deploy

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
HOST=0.0.0.0

# Environment mode: development | production
# - development: debug logging, relaxed security
# - production: info logging, strict security
NODE_ENV=development

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# Examples:
#   - Single origin: http://localhost:5173
#   - Multiple origins: https://app.example.com,https://admin.example.com
CORS_ORIGINS=http://localhost:5173

# ===========================================
# Authentication Configuration
# ===========================================
# JWT Secret Key
# IMPORTANT: Change this in production! Use a long random string (32+ characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-in-production-use-a-long-random-string

# Authentication Mode
# - false (default): Anonymous access allowed (single-user/development mode)
# - true: Authentication required for all users (team/production mode)
AUTH_REQUIRED=false
